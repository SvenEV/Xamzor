@inherits DataTemplate

<Grid Parent="PARENT" Background="white"
      Margin="T(60)" Padding="T(20)"
      RowDefinitions="@Rows("Auto", "*")">

    <TextBlock Parent="PARENT"
               Text="@_item.Title"
               Margin="T(0,0,0,12)"
               FontSize="32.0"
               FontWeight="FontWeight.SemiBold" />
    
    <ContentControl Parent="PARENT" Row="1"
                    ContentTemplate="@_item.View" />
</Grid>

@functions{
    private Index.ComponentGalleryItem _item => (Index.ComponentGalleryItem)base.DataContext;
}